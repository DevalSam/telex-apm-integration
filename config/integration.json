{
  "name": "cross-platform-apm",
  "type": "interval",
  "version": "1.0.0",
  "description": "Cross-platform APM and crash reporting for Flutter, React Native, and .NET MAUI applications",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "repository": "https://github.com/telex-integrations/telex-apm-integration",
  "documentation": "https://github.com/telex-integrations/telex-apm-integration#readme",
  "intervals": [
    {
      "name": "performance_metrics",
      "seconds": 300,
      "description": "Collect and report performance metrics",
      "handler": "handleMetricsCollection"
    },
    {
      "name": "crash_check",
      "seconds": 60,
      "description": "Check for new crashes",
      "handler": "handleCrashCheck"
    }
  ],
  "settings": {
    "required": [
      "organization_id",
      "metrics_channel",
      "alerts_channel"
    ],
    "properties": {
      "organization_id": {
        "type": "string",
        "description": "Telex organization ID"
      },
      "metrics_channel": {
        "type": "string",
        "description": "Channel ID for metrics reporting"
      },
      "alerts_channel": {
        "type": "string",
        "description": "Channel ID for crash alerts"
      },
      "platforms": {
        "type": "object",
        "properties": {
          "flutter": {
            "type": "boolean",
            "default": false
          },
          "react_native": {
            "type": "boolean",
            "default": false
          },
          "maui": {
            "type": "boolean",
            "default": false
          }
        }
      }
    }
  }
}
